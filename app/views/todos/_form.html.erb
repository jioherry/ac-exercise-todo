<% if @todo.errors.any? %>
	
	<ul>
		<% @todo.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	</ul>

<% end %>

<%= form_for @todo do |f| %>

	<%= f.label :title %>
	<%= f.text_field :title %>

	<%= f.label :date %>
	<%= f.text_field :date %>

	<%= f.label :description %>
	<%= f.text_field :description %>

	<%= f.submit %>

<% end %>