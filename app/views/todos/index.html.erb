<h1>Ray's ToDo List</h1>
<ul>
	<% @todos.each do |todo| %>

	<li>
		<%= todo.title %>
		<%= link_to "show", todo_path(todo)%>
		<%= link_to "edit", edit_todo_path(todo)%>
		<%= link_to "Destroy", todo_path(todo),
			method: :delete, data:{cofirm:"Are you sure"} %>
	</li>
	<% end %>
</ul>

<%= link_to "New todo", new_todo_path %>