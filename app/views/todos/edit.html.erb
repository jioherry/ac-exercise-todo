<%= form_for @todo do |f| %>
	
	<%= f.label :title, "Title" %>
	<%= f.text_field :title %>

	<%= f.label :date, "Date" %>
	<%= f.text_field :date %>

	<%= f.label :description, "Description" %>
	<%= f.text_area :description %>

	<%= f.submit "Update" %>

<% end %>

<p><%= link_to 'Back to index', todos_path %></p>